<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="Berhasil!"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="Transaksi telah selesai dilakukan."
        android:textColor="@color/black_60_transparent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Total Transaksi"
        android:textColor="@color/black_60_transparent"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtKembalianBelanja2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="Rp 0"
        android:textColor="@color/black_80_transparent"
        android:textSize="26sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Kembalian"
        android:textColor="@color/black_60_transparent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtKembalianBelanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="Rp 0"
        android:textColor="@color/black_80_transparent"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBuatTransaksiBaru"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_transaksi_baru"
            android:fontFamily="sans-serif-medium"
            android:text="Transaksi Baru"
            android:textAllCaps="false"
            android:textColor="@color/black_60_transparent"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>