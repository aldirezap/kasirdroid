<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="sans-serif"
        android:text="Tambahkan Kategori"
        android:textColor="@color/black_80_transparent"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtNamaKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_spinner"
        android:ems="10"
        android:hint="Tulis nama kategori"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAlertBatalTambahKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Batal"
            android:textAllCaps="false"
            android:textColor="@color/gradientEnd" />

        <Button
            android:id="@+id/btnAlertTambahKategori"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Tambahkan"
            android:textAllCaps="false"
            android:textColor="@color/gradientEnd" />
    </LinearLayout>

</LinearLayout>