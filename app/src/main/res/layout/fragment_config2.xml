<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.FragmentConfig2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Aktivasi"
        android:textColor="@color/black_80_transparent"
        android:textSize="18sp" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Silahkan masukan 6 digit kode aktivasi Aplikasi Anda."
        android:textColor="@color/black_60_transparent"
        android:textSize="14sp" />

    <com.chaos.view.PinView
        android:id="@+id/editPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:textColor="@color/gradientCenter"
        app:itemCount="6"
        app:itemHeight="35dp"
        app:itemRadius="5dp"
        app:itemWidth="35dp"
        app:lineColor="@color/gradientCenter" />

    <Button
        android:id="@+id/btnNext3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_gradient"
        android:drawablePadding="-12dp"
        android:text="Aktivasi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>